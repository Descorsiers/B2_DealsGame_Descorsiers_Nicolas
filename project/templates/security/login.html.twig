{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section id="formLogin">
    <form method="post" class="formLogin">
        <figure>
            <img src="{{ asset('images/form/login.png')}}">
        </figure>
        <div class="formLogin__input">
            <input class="formLogin__input-text" type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" autocomplete="email" required autofocus>
            <input class="formLogin__input-text" type="password" name="password" id="inputPassword" placeholder="Password"  autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="formLogin__secondary">
            <label>
                <input class="formLogin__input-checkbox" type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
            <a href="/reset-password" class="formLogin__resetPassword">
                MdP oubli√©s?
            </a>
        </div>
        <button type="submit" class="formLogin__submit">
            <h1 class="formLogin__submit-title">
                LOGIN
            </h1>
        </button>
    </form>
</section>
